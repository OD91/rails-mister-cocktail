<%= render "/cocktails/banner" %>
<div class="container">
<h1>Cocktails</h1>
<button class="btn btn-primary">  <%= link_to "Create a new cocktail", new_cocktail_path(@cocktail), {:style=>'color:#FFFFFF; text-decoration: none', :class => "css_class"}  %>
</button>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-lg-4">

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.picture_url %>);">
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

